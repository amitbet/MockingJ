// Place your settings in this file to overwrite the default settings
{
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/*.js.map": true,
        "**/node_modules": true,
        "**/.vs": true,
        "**/.idea": true,
        "**/*.njsproj*": true,
        "**/*.sln*": true,
        "**/typings": true,
        "**/*.d.ts": true,
        "**/*.js": {
            "when": "$(basename).ts"
        }
    },
    "editor.formatOnSave": true
    //"typescript.tsdk": "./node_modules/typescript/lib"
}